<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="172dp"
    android:paddingTop="@dimen/spacing_medial_24"
    android:paddingRight="@dimen/spacing_normal_16"
    android:paddingLeft="@dimen/spacing_normal_16"
    android:paddingBottom="@dimen/spacing_small_8"
    android:background="@drawable/header_bg">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/color_accent"
        android:layout_marginTop="@dimen/spacing_normal_16"
        android:src="@drawable/bateau"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_medium_56"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/uer_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_name"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/uer_email_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/miller777_mail_ru"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif"/>


    </LinearLayout>

</RelativeLayout>